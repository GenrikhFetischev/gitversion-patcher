{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "noUnusedLocals": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules"],
  "include": ["src/"]
}
